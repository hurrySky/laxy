<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sbs.system.menu.mapper.MenuMapper">
	<resultMap type="Menu" id="MenuResult">
		<id     property="menuId"       column="menu_id"      />
		<result property="menuName"    	column="menu_name"    />
		<result property="parentId"    	column="parent_id"    />
		<result property="orderNum"    	column="order_num"    />
		<result property="url"    		column="url"    	  />
		<result property="menuType"    	column="menu_type"    />
		<result property="visible"    	column="visible"      />
		<result property="perms"    	column="perms"        />
		<result property="icon"    	    column="icon"         />
		<result property="createBy"    	column="create_by"    />
		<result property="createTime"   column="create_time"  />
		<result property="updateBy"     column="update_by"    />
		<result property="updateTime"   column="update_time"  />
		<result property="remark"       column="remark" 	  />
		<result property="menuLevel"    column="menu_level"   />
	</resultMap>
	<!-- 
		获得一级菜单
	 -->
	<select id="findFirstMenuList" resultMap="MenuResult">
		select
			m.menu_id,    
			m.menu_name,  
			m.parent_id,  
			m.menu_level,
			m.order_num,  
			m.url,    	  
			m.menu_type,  
			m.visible,    
			m.perms,      
			m.icon,       
			m.create_by,  
			m.create_time,
			m.update_by,  
			m.update_time,
			m.remark
		from
			sys_menu m
			where m.parent_id = 0
			order by m.order_num
	</select>
	
	<!-- 
		获得visible为显示的一级菜单
	 -->
	<select id="findVisibleFirstMenuList" resultMap="MenuResult">
		select
			m.menu_id,    
			m.menu_name,  
			m.parent_id,  
			m.menu_level,
			m.order_num,  
			m.url,    	  
			m.menu_type,  
			m.visible,    
			m.perms,      
			m.icon,       
			m.create_by,  
			m.create_time,
			m.update_by,  
			m.update_time,
			m.remark
		from
			sys_menu m
			where m.parent_id = 0
			and m.visible = 1
			order by m.order_num
	</select>
	
	<!-- 
		根据menuId获得某菜单的子菜单
	 -->
	<select id="findSonMenuByMenuId" parameterType="int" resultMap="MenuResult">
		select
			m.menu_id,    
			m.menu_name,  
			m.parent_id,  
			m.menu_level,
			m.order_num,  
			m.url,    	  
			m.menu_type,  
			m.visible,    
			m.perms,      
			m.icon,       
			m.create_by,  
			m.create_time,
			m.update_by,  
			m.update_time,
			m.remark
		from
			sys_menu m
				where m.parent_id = #{menuId}
			order by order_num
	</select>
	
	<!-- 
		根据menuId获得某菜单的visible显示的子菜单
	 -->
	<select id="findVisibleSonMenuByMenuId" parameterType="int" resultMap="MenuResult">
		select
			m.menu_id,    
			m.menu_name,  
			m.parent_id,  
			m.menu_level,
			m.order_num,  
			m.url,    	  
			m.menu_type,  
			m.visible,    
			m.perms,      
			m.icon,       
			m.create_by,  
			m.create_time,
			m.update_by,  
			m.update_time,
			m.remark
		from
			sys_menu m
				where m.parent_id = #{menuId}
				and m.visible = 1
			order by order_num
	</select>
	
	<!-- 
		根据menuId查找菜单
	 -->
	<select id="findMenuByID" parameterType="int" resultMap="MenuResult">
		select
			m.menu_id,    
			m.menu_name,  
			m.parent_id,  
			m.menu_level,
			m.order_num,  
			m.url,    	  
			m.menu_type,  
			m.visible,    
			m.perms,      
			m.icon,       
			m.create_by,  
			m.create_time,
			m.update_by,  
			m.update_time,
			m.remark
		from
			sys_menu m
		where
			menu_id = #{menuId}
	</select>
	<!-- 
		根据menuId删除菜单
	 -->
	<delete id = "deleteMenuById" parameterType="int" >
		delete
		from
			sys_menu
		where 
			menu_id = #{menuId}
	</delete>
	<!-- 
		批量删除菜单
	 -->
	<delete id = "batchDeleteMenu" parameterType="int">
		delete
		from
			sys_menu
		where 
			menu_id in
			<foreach collection="array" item="menuId" open="(" separator="," close=")">
	 			#{menuId}
	        </foreach> 
	</delete>
	
	<update id="updateMenu" parameterType="Menu">
 		update sys_menu
 		<set>
 			<if	test="menuId != null and menuid = ''">		      menu_id=#{menuId},</if>
			<if	test="menuName != null and menuName != ''">       menu_name=#{menuName},</if>
			<if	test="parentId != null and parentId != ''">       parent_id=#{parentId},</if>
			<if	test="menuLevel != null and menuLevel != ''">       menu_level=#{menuLevel},</if>
			<if	test="orderNum != null and orderNum != ''">       orderNum=#{orderNum},</if>
			<if	test="url != null and url != ''">    		      url=#{url},</if>
			<if	test="menuType != null and menuType != ''">       menu_type=#{menuType},</if>
			<if	test="visible != null">         visible=#{visible},</if>
			<if	test="perms != null and perms != ''">    	      perms=#{perms},</if>     
			<if	test="icon != null and icon != ''">    	          icon=#{icon},</if>
			<if	test="createBy != null and createBy != ''">    	  create_by=#{createBy},</if>
			<if	test="createTime != null and createTime != ''">   create_time=#{createTime},</if>
			<if	test="updateBy != null and updateBy != ''">       update_by=#{updateBy},</if>
			<if	test="remark != null and remark != ''">           remark=#{remark},</if>
			update_time=#{updateTime}
 		</set>
 		where
 			1=1
 			<if test="menuId != null and menuId  != ''">and menu_id = #{menuId}</if>
	</update>
	
	<insert id="saveMenu" parameterType="Menu" useGeneratedKeys="true" keyProperty="menuId">
 		insert 
 		into 
 			sys_menu(
 			<if	test="menuId != null and menuId = ''">		      menu_id,</if>
			<if	test="menuName != null and menuName != ''">       menu_name,</if>
			<if	test="parentId != null and parentId != ''">       parent_id,</if>
			<if	test="menuLevel != null and menuLevel != ''">     menu_level,</if>
			<if	test="orderNum != null and orderNum != ''">       order_num,</if>
			<if	test="url != null and url != ''">    		      url,</if>
			<if	test="menuType != null and menuType != ''">       menu_type,</if>
			<if	test="visible != null and visible != ''">         visible,</if>
			<if	test="perms != null and perms != ''">    	      perms,</if>     
			<if	test="icon != null and icon != ''">    	          icon,</if>
			<if	test="createBy != null and createBy != ''">    	  create_by,</if>
			<if	test="updateBy != null and updateBy != ''">       update_by,</if>
			<if	test="remark != null and remark != ''">           remark,</if>
			update_time,
			create_time
 		)values(
 			<if	test="menuId != null and menuId = ''">		      #{menuId},</if>
			<if	test="menuName != null and menuName != ''">       #{menuName},</if>
			<if	test="parentId != null and parentId != ''">       #{parentId},</if>
			<if	test="menuLevel != null and menuLevel != ''">     #{menuLevel},</if>
			<if	test="orderNum != null and orderNum != ''">       #{orderNum},</if>
			<if	test="url != null and url != ''">    		      #{url},</if>
			<if	test="menuType != null and menuType != ''">       #{menuType},</if>
			<if	test="visible != null and visible != ''">         #{visible},</if>
			<if	test="perms != null and perms != ''">    	      #{perms},</if>     
			<if	test="icon != null and icon != ''">    	          #{icon},</if>
			<if	test="createBy != null and createBy != ''">    	  #{createBy},</if>
			<if	test="updateBy != null and updateBy != ''">       #{updateBy},</if>
			<if	test="updateTime != null and updateTime != ''">   #{updateTime},</if>
			<if	test="remark != null and remark != ''">           #{remark},</if>
			<if	test="updateTime != null and updateTime != ''">   #{updateTime},</if>
			<choose>
				<when test="updateTime != null and updateTime != ''">   #{updateTime},</when>
				<otherwise>
					sysdate(),
     			</otherwise>
			</choose>
			sysdate()
 		)
	</insert>
	
	<select id = "findSameLevelMaxOrderNum" parameterType="int" resultType="java.lang.Integer">
		select count(*) from sys_menu  where parent_id = #{parentId} group by menu_level
	</select>
</mapper>